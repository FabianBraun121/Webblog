<%- include("partials/header.ejs") %>
<div class="container">
    <% if (Array.isArray(blogs) && blogs.length === 0) { %>
        <h1>There are no Blogs yet! Write something!</h1>
    <% } else { %>
        <h1>All Blog Posts</h1>
        <% blogs.forEach(function(blog) { %>
            <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
                <div class="col-lg-6 px-0">
                  <h1 class="display-4 fw-bold"><%= blog.title %>...</h1>
                  <p class="lead my-3"><%= truncateText(blog.story, 60) %></p>
                  <p class="lead mb-0">
                    <a href="/readBlog?title=<%= encodeURIComponent(blog.title) %>" class="text-body-emphasis fw-bold">Continue reading...</a>
                  </p>
                </div>
              </div>
        <% }); %>
    <% } %>
</div>
<%- include("partials/footer.ejs") %>